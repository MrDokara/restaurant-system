<UserControl x:Class="RestClient.CustomControls.NumericUpDown"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:RestClient.CustomControls"
             mc:Ignorable="d" >
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="137*"/>
            <ColumnDefinition Width="20*"/>
            <ColumnDefinition Width="20*"/>
        </Grid.ColumnDefinitions>
        <TextBox Grid.Column="0" x:Name="txtNum" x:FieldModifier="private" Text="1" TextChanged="txtNum_TextChanged" FontSize="16" />
        <Button Grid.Column="1" x:Name="cmdUp" x:FieldModifier="private" Content="˄" Click="cmdUp_Click" />
        <Button Grid.Column="2" x:Name="cmdDown" x:FieldModifier="private" Content="˅" Click="cmdDown_Click" />
    </Grid>
</UserControl>
