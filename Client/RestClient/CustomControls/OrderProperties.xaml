<UserControl x:Class="RestClient.CustomControls.OrderProperties"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:RestClient.CustomControls"
             mc:Ignorable="d" d:DesignWidth="1280" d:DesignHeight="720" >

    <UserControl.Resources>
        <Style TargetType="Label">
            <Setter Property="FontSize" Value="24" />
            <Setter Property="Margin" Value="10, 0"></Setter>
        </Style>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="66*"/>
            <RowDefinition Height="587*"/>
            <RowDefinition Height="67*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="408*"/>
            <ColumnDefinition Width="466*"/>
            <ColumnDefinition Width="407*"/>
        </Grid.ColumnDefinitions>
        <Rectangle Fill="#9E0C0C0F" HorizontalAlignment="Left" Height="720" Stroke="Black" VerticalAlignment="Top" Grid.RowSpan="3" Width="1280" Grid.ColumnSpan="3" MouseDown="Rectangle_OnClick"/>
        <Grid x:Name="WindowOrder" x:FieldModifier="private" Grid.Column="1" Grid.Row="1" Height="0" Width="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="53*"/>
                <ColumnDefinition Width="338*"/>
                <ColumnDefinition Width="53*"/>
            </Grid.ColumnDefinitions>
            <Rectangle Grid.Column="0" Fill="#FFCCCCD3" Stroke="Black" VerticalAlignment="Top" RadiusX="25" RadiusY="25" Grid.ColumnSpan="3" Height="546" Margin="10,0" />
            <StackPanel Grid.Column="1" Height="561">
                <Label Content="Количество" />
                <local:NumericUpDown x:Name="Count" x:FieldModifier="private" Margin="10,0" />
                <Label Content="Комментарий" />
                <TextBox x:Name="Comment" x:FieldModifier="private" Height="321" Margin="10,0" />
                <Button x:Name="AddButton" x:FieldModifier="private" Height="66" Margin="10,0" Content="Добавить" FontSize="24" RenderTransformOrigin="0.5,0.5"/>
            </StackPanel>
        </Grid>
    </Grid>
</UserControl>
