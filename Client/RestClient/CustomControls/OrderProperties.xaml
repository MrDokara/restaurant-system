<UserControl x:Class="RestClient.CustomControls.OrderProperties"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:RestClient.CustomControls"
             mc:Ignorable="d" d:DesignWidth="1280" d:DesignHeight="720" >

    <UserControl.Resources>
        <Style TargetType="Label">
            <Setter Property="FontSize" Value="24" />
            <Setter Property="Margin" Value="10, 0"></Setter>
        </Style>
    </UserControl.Resources>

    <Grid x:Name="MainGrid">
        <Grid.RowDefinitions>
            <RowDefinition Height="66*"/>
            <RowDefinition Height="587*"/>
            <RowDefinition Height="67*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="408*"/>
            <ColumnDefinition Width="466*"/>
            <ColumnDefinition Width="407*"/>
        </Grid.ColumnDefinitions>
        <Rectangle Fill="#9E0C0C0F" Stroke="Black" Grid.RowSpan="3" Grid.ColumnSpan="3" MouseDown="Rectangle_OnClick"/>
        <Grid x:Name="WindowOrder" x:FieldModifier="private" Grid.Column="1" Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="35*"/>
                <RowDefinition Height="515*"/>
                <RowDefinition Height="38*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="53*"/>
                <ColumnDefinition Width="338*"/>
                <ColumnDefinition Width="53*"/>
            </Grid.ColumnDefinitions>
            <Rectangle Grid.Column="0" 
                       Grid.Row="0" 
                       Fill="#FFCCCCD3" Stroke="Black" RadiusX="25" RadiusY="25" 
                       Grid.ColumnSpan="3" 
                       Grid.RowSpan="3" />
            <Grid Grid.Column="1" Grid.Row="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="59*"/>
                    <RowDefinition Height="395*"/>
                    <RowDefinition Height="60*"/>
                </Grid.RowDefinitions>
                <Grid Grid.Row="0" Margin="10, 0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="39*"/>
                        <RowDefinition Height="20*"/>
                    </Grid.RowDefinitions>
                    <Label Content="Количество"/>
                    <local:NumericUpDown Grid.Row="1" x:Name="Count" x:FieldModifier="private"/>
                </Grid>
                <Grid Grid.Row="1">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="13*"/>
                        <RowDefinition Height="120*"/>
                    </Grid.RowDefinitions>
                    <Label Grid.Row="0" Content="Комментарий" />
                    <TextBox Grid.Row="1" x:Name="Comment" x:FieldModifier="private" Margin="10,0" MaxLength="1000" FontSize="14"/>
                </Grid>
                <Button Grid.Row="2" Margin="10, 0" x:Name="AddButton" x:FieldModifier="private" Content="Добавить" FontSize="24" RenderTransformOrigin="0.5,0.5" />
            </Grid>
        </Grid>
    </Grid>
</UserControl>
