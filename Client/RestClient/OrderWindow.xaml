<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RestClient"
        xmlns:CustomControls="clr-namespace:RestClient.CustomControls" x:Class="RestClient.OrderWindow"
        mc:Ignorable="d" Height="720" Width="1280" ResizeMode="NoResize" Icon="icon.png">

    <Window.Resources>
        <Style TargetType="Border">
            <Setter Property="BorderBrush" Value="#FF615A5A"></Setter>
        </Style>
    </Window.Resources>

    <Grid RenderTransformOrigin="0.505,0.499">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="19*"/>
            <ColumnDefinition Width="72*"/>
        </Grid.ColumnDefinitions>
        <CustomControls:Loading x:Name="LoadingCircle" Grid.Column="1"/>
        <Border Grid.Column="0" BorderThickness="1" HorizontalAlignment="Left" Height="120" VerticalAlignment="Top" Width="246" Margin="10,10,0,0">
            <TextBlock x:Name="OfficiantName" Margin="9" Text="" FontSize="24" TextWrapping="Wrap" HorizontalAlignment="Center" VerticalAlignment="Center" />
        </Border>
        <Border BorderThickness="1" Grid.Column="1" HorizontalAlignment="Left" Height="670" Margin="10,10,0,0" VerticalAlignment="Top" Width="982">
            <WrapPanel x:Name="Products" Margin="9">

            </WrapPanel>
        </Border>
        <Border Grid.Column="0" BorderThickness="1" HorizontalAlignment="Left" Height="545" Margin="10,135,0,0" VerticalAlignment="Top" Width="246">
            <StackPanel IsEnabled="False">
                <ScrollViewer Height="464">
                    <StackPanel Width="226" Height="461"/>
                </ScrollViewer>
                <Button Content="Отправить" Height="81" FontSize="24"/>

            </StackPanel>
        </Border>
    </Grid>
</Window>
