        </Grid>
        <!--#endregion-->

        <!--#region Bottom Grid-->
        <Grid Grid.Row="2">
            <!--#region Bottom Grid Definitions-->
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition Width="50"/>
            </Grid.ColumnDefinitions>
            <!--#endregion-->

            <!--#region Right Tools Panel-->
            <DockPanel Grid.Column="1">
